<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    android:label="live"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.yhe.kotlinlive.ui.main.MainFragment"
        android:label="main"
        tools:layout="@layout/main_fragment" >
        <action
            android:id="@+id/action_mainFragment_to_liveFragment"
            app:destination="@id/liveFragment" />
    </fragment>

    <fragment
        android:id="@+id/liveFragment"
        android:name="com.yhe.kotlinlive.ui.live.LiveFragment"
        android:label="live"
        tools:layout="@layout/live_fragment">
        <action
            android:id="@+id/action_liveFragment_to_screenRecorderFragment"
            app:destination="@id/screenRecorderFragment" />
    </fragment>
    <fragment
        android:id="@+id/screenRecorderFragment"
        android:name="com.yhe.kotlinlive.ui.screenrecorder.ScreenRecorderFragment"
        android:label="screenRecorder"
        tools:layout="@layout/screen_recorder_fragment"/>
</navigation>